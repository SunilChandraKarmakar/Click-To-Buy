@using ClickToBuy.Model;
@model ProductPhoto;

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-panel">
    <h2 id="hadertitle"> Create Product Photo</h2>
    <hr />
    <div class="form" style="margin-top:50px">
        <form method="post" asp-controller="ProductPhoto" asp-action="Update" asp-route-pic="@Model.Photo" class="cmxform form-horizontal style-form" enctype="multipart/form-data">
            <div class="col-md-6">
                <input type="hidden" asp-for="@Model.ProductId" />
                <input type="hidden" asp-for="@Model.Featured" />
                <div class="form-group ">
                    <label asp-for="@Model.Photo" class="control-label col-lg-2"></label>
                    <div class="col-lg-8">
                        <input type="file" asp-for="@Model.Photo" name="photo" value="@Model.Photo" class=" form-control">
                        <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Status" class="control-label col-lg-2"></label>
                    <div class="col-lg-8">
                        <input type="checkbox" asp-for="@Model.Status" />
                    </div>
                </div>
            </div>  
            <div class="col-md-6">
                <img src="~/@Model.Photo" width="140" height="160" />
            </div>
            <div class="form-group" style="margin-left:100px">
                <div class="col-lg-offset-2 col-lg-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" value="Update" class="btn btn-theme" />
                    <a asp-controller="ProductPhoto" asp-action="Index" asp-route-id="@Model.ProductId" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

