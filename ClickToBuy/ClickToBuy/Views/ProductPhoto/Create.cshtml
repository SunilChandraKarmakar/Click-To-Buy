@using ClickToBuy.Model;
@model ProductPhoto;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Product getSelectedProduct = ViewBag.GetSelectedProductInfo;
}

<div class="form-panel">
    <h2 id="hadertitle"> Create Product Photo</h2>
    <hr />
    <div class="form" style="margin-top:50px">
        <form method="post" asp-controller="ProductPhoto" asp-action="Create" asp-route-proid="@getSelectedProduct.Id" class="cmxform form-horizontal style-form" enctype="multipart/form-data">
            <div class="form-group ">
                <label asp-for="@Model.Photo" class="control-label col-lg-2"></label>
                <div class="col-lg-8">
                    <input type="file" asp-for="@Model.Photo" name="photo" required="required" class=" form-control">
                    <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Status" class="control-label col-lg-2"></label>
                <div class="col-lg-8">
                    <input type="checkbox" asp-for="@Model.Status"/> 
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Featured" class="control-label col-lg-2"></label>
                <div class="col-lg-8">
                    <input type="checkbox" asp-for="@Model.Featured" />
                </div>
            </div>
            <div class="form-group" style="margin-left:100px">
                <div class="col-lg-offset-2 col-lg-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" value="Create" class="btn btn-theme" />
                    <a asp-controller="Product" asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

