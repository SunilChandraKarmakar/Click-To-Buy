@using ClickToBuy.Model
@model CloseType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-panel">
        <h2 id="hadertitle"> Create Close Type</h2>
        <hr />
        <div class="form" style="margin-top:50px">
            <form method="post" asp-action="Create" class="cmxform form-horizontal style-form">
                <div class="form-group ">
                    <label asp-for="Name" class="control-label col-lg-2"></label>
                    <div class="col-lg-6">
                        <input type="text" asp-for="Name" class=" form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group ">
                    <label asp-for="@Model.Description" class="control-label col-lg-2"></label>
                    <div class="col-lg-6">
                        <textarea asp-for="Description" class="form-control" placeholder="Write Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <span class="text-danger">@ViewBag.ErrorMessage</span>
                        <input type="submit" value="Create" class="btn btn-theme" />
                        <a asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#Name").change(function () {
                var name = $("#Name").val();
                var serverUrl = '/api/CloseType/CheckName?name=' + name;

                $.ajax({
                    url: serverUrl,
                    success: function (response) {
                        if (response == 1) {
                            alert("Condition is exist! Please try new one.");
                            $('#Name').val('');
                        }
                    },
                    error: function (response) {
                        alert(response);
                    }
                });
             });
        });
    </script>
}

