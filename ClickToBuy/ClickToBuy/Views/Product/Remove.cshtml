@model ClickToBuy.Model.Product

@{
    ViewData["Title"] = "Remove";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row content-panel mt mb">
    <h2 id="hadertitle">Remove Product</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.RegularPrice)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.RegularPrice)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.OfferPrice)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OfferPrice)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Link)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Link)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ProductDetails)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductDetails)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Brand.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Condition)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Condition.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CloseType)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CloseType.Name)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            @{
                var photo = (Model.Picture != null ? Model.Picture : "NoImageFound.png");
                <img src="~/@photo" class="img-responsive"/>
             }
        </div>
        <form asp-action="Remove" id="createandeditfrom">
            <input type="hidden" asp-for="Id" />
            <span class="text-danger">@ViewBag.ErrorMessage</span>
            <input type="submit" value="Remove" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
        </form>
    </div>
</div>

