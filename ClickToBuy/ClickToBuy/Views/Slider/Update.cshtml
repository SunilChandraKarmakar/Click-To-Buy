@using ClickToBuy.Model;
@model Slider;

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-panel">
    <h2 id="hadertitle"> Update Slide Show</h2>
    <hr />
    <div class="form" style="margin-top:50px">
        <form method="post" asp-action="Update" asp-route-pic="@Model.PhotoName" class="cmxform form-horizontal style-form" enctype="multipart/form-data">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.PhotoName" class="control-lable col-lg-2"></label>
                    <div class="col-lg-8">
                        <input type="file" name="photo" asp-for="@Model.PhotoName" value="@Model.PhotoName" class="form-control" />
                        <span asp-validation-for="@Model.PhotoName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group ">
                    <label asp-for="@Model.Status" class="control-label col-lg-2 col-sm-3">Status</label>
                    <div class="col-lg-10 col-sm-6">
                        <input type="checkbox" asp-for="@Model.Status" style="width: 20px" class="checkbox form-control">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <img src="~/@Model.PhotoName" height="130" width="280" />
            </div>
            <div class="form-group" style="margin-left:100px">
                <div class="col-lg-offset-2 col-lg-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" value="Update" class="btn btn-theme" />
                    <a asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

