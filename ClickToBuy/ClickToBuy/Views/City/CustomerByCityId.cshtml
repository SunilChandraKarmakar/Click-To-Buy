@using ClickToBuy.Model
@model IEnumerable<Customer>

@{
    ViewData["Title"] = "Customer By City";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row content-panel mt mb">
    <h2 id="hadertitle">Customer Details</h2>
</div>

<div class="col-lg-12" style="margin-top: 20px">
    <div class="content-panel" style="padding:20px">
        <section id="unseen">
            <table id="myTable" class="table table-bordered table-striped table-condensed" width="100%">
                <thead>
                    <tr>
                        <th>Basic Info</th>
                        <th>Other Info</th>
                        <th>Address</th>
                        <th>Picture</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Customer item in Model)
                    {
                        <tr>
                            <td>
                                Name : @item.Name <br />
                                Contact : @item.Contact <br />
                                Emial : @item.Email <br />
                                Gender : @item.Gender.Name
                            </td>
                            <td>
                                Join : @item.JoinDate <br />
                                IP : @item.CustomerIPAddress
                            </td>
                            <td>
                                Address : @item.Address <br />
                                City : @item.City.Name <br />
                                Country : @item.Country.Name
                            </td>
                            <td>
                                <img src="~/@item.Pictuer" height="80" width="90" />
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Basic Info</th>
                        <th>Other Info</th>
                        <th>Address</th>
                        <th>Picture</th>
                    </tr>
                </tfoot>
            </table>
        </section>
    </div>
    <!-- /content-panel -->
</div>

