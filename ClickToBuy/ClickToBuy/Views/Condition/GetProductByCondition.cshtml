@using ClickToBuy.Model
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Get Product By Condition";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row content-panel mt mb">
    <h2 id="hadertitle">Product Details</h2>
</div>

<div class="col-lg-12" style="margin-top: 20px">
    <div class="content-panel" style="padding:20px">
        <section id="unseen">
            <table id="myTable" class="display table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Basic Info</th>
                        <th>Activity</th>
                        <th>Price</th>
                        <th>Picture</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product item in Model)
                    {
                        <tr>
                            <td>
                                Name : @item.Name <br />
                                Category : @item.Category.Name <br />
                                Brand : @item.Brand.Name <br />
                            </td>
                            <td>
                                Condition : @item.Condition.Name <br />
                                Status : @item.CloseType.Name <br />
                                Link : @item.Link <br />
                                Details : @item.ProductDetails
                            </td>
                            <td>
                                Regular Price : @item.RegularPrice <br />
                                Offer Price : @item.OfferPrice <br />
                            </td>
                            <td><img src="~/@item.Picture" height="100" width="90" /></td>
                            <td>
                                <a asp-route-id="@item.Id" asp-action="Update" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i> Update</a>
                                <a asp-route-id="@item.Id" asp-action="Remove" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Basic Info</th>
                        <th>Activity</th>
                        <th>Price</th>
                        <th>Picture</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>
        </section>
    </div>
    <!-- /content-panel -->
</div>

