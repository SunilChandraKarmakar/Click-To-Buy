@using ClickToBuy.Model
@model StockProduct

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-panel">
    <h2 id="hadertitle"> Update Product Stock</h2>
    <hr />
    <div class="form" style="margin-top:50px">
        <form method="post" asp-action="Create" class="cmxform form-horizontal style-form">
            <div class="form-group">
                <label asp-for="ProductId" class="control-label col-lg-2"></label>
                <div class="col-lg-8">
                    <select asp-for="ProductId" asp-items="@ViewBag.ProductList" class="form-control">
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.Quantity" class="control-label col-lg-2"></label>
                <div class="col-lg-8">
                    <input type="text" asp-for="@Model.Quantity" value="@Model.Quantity" class=" form-control">
                    <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" value="Update" class="btn btn-theme" />
                    <a asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

