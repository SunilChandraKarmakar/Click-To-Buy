@using ClickToBuy.Model
@model Brand

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-panel">
    <h2 id="hadertitle"> Update Brand</h2>
    <hr />
    <div class="form" style="margin-top:50px">
        <form method="post" asp-action="Update" class="cmxform form-horizontal style-form">
            <div class="form-group ">
                <label asp-for="Name" class="control-label col-lg-2"></label>
                <div class="col-lg-6">
                    <input type="text" asp-for="Name" value="@Model.Name" class=" form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.Origin" class="control-label col-lg-2"></label>
                <div class="col-lg-6">
                    <input type="text" asp-for="@Model.Origin" value="@Model.Origin" class=" form-control">
                    <span asp-validation-for="@Model.Origin" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.Description" class="control-label col-lg-2"></label>
                <div class="col-lg-6">
                    <textarea asp-for="Description" class="form-control" placeholder="Write Description">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" value="Update" class="btn btn-theme" />
                    <a asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

