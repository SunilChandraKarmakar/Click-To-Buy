@using ClickToBuy.Model;
@model Category;

@{
    ViewData["Title"] = "AddSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Model.Description = "";
}

<div class="form-panel">
    <h2 id="hadertitle"> Add Sub Category</h2>
    <hr />
    <div class="form" style="margin-top:50px">
        <form method="post" asp-action="AddSubCategory" class="cmxform form-horizontal style-form">
            <div class="form-group ">
                <label asp-for="Name" class="control-label col-lg-2"></label>
                <div class="col-lg-6">
                    <input type="text" asp-for="Name" readonly="readonly" class=" form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label for="subCategory" class="control-label col-lg-2">Sub Category</label>
                <div class="col-lg-6">
                    <input type="text" id="subCategory" name="subCategory" required="required" class=" form-control">
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="Description" class="control-label col-lg-2"></label>
                <div class="col-lg-6">
                    <textarea asp-for="Description" class="form-control" placeholder="Write Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.Status" class="control-label col-lg-2 col-sm-3">Status</label>
                <div class="col-lg-10 col-sm-6">
                    <input type="checkbox" asp-for="@Model.Status" style="width: 20px" class="checkbox form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" value="Create" class="btn btn-theme" />
                    <a asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#subCategory").change(function () {
                var name = $("#subCategory").val();
                var serverUrl = '/api/Category/CheckName?name=' + name;

                $.ajax({
                    url: serverUrl,
                    success: function (response) {
                        if (response == 1) {
                            alert("Sub category is exist! Please try new one.");
                            $('#subCategory').val('');
                        }
                    },
                    error: function (response) {
                        alert(response);
                    }
                });
            });
        });
    </script>
}


