@using ClickToBuy.Model;
@model Category;

@{
    ViewData["Title"] = "AddSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 id="hadertitle"> Add Sub Category</h2>
<hr />

<div class="row" id="createandeditfrom">
    <div class="col-md-4">
        <form method="post" asp-action="AddSubCategory">
            <div class="form-group">
                <label asp-for="Name" class="control-lable">Parent Category</label>
                <input type="text" asp-for="Name" value="@Model.Name" readonly="readonly" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="subCategory" class="control-label">Sub Category</label>
                <input type="text" id="subCategory" name="subCategory" class="form-control" required="required"/>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-lable"></label>
                <textarea asp-for="Description" class="form-control" readonly="readonly" placeholder="Write Description">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="@Model.Status" /> Status
            </div>
            <div class="form-group">
                <span class="text-danger">@ViewBag.ErrorMessage</span>
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#Name").change(function () {
                var name = $("#Name").val();
                var serverUrl = '/api/Category/CheckName?name=' + name;

                $.ajax({
                    url: serverUrl,
                    success: function (response) {
                        if (response == 1) {
                            alert("Category is exist! Please try new one.");
                            $('#Name').val('');
                        }
                    },
                    error: function (response) {
                        alert(response);
                    }
                });
            });
        });
    </script>
}


