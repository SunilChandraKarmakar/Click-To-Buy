@using ClickToBuy.Model
@model Category

@{
    ViewData["Title"] = "UpdateParentCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-panel">
    <h2 id="hadertitle">Update Parent Category</h2>
    <hr />
    <div class="form" style="margin-top:50px">
        <form method="post" asp-action="UpdateParentCategory" class="cmxform form-horizontal style-form">
            <div class="form-group ">
                <label asp-for="Name" class="control-label col-lg-2"></label>
                <div class="col-lg-6">
                    <input type="text" asp-for="Name" value="@Model.Name" class=" form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="Description" class="control-label col-lg-2"></label>
                <div class="col-lg-6">
                    <textarea asp-for="Description" class="form-control" placeholder="Write Description">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.Status" class="control-label col-lg-2 col-sm-3">Status</label>
                <div class="col-lg-10 col-sm-6">
                    <input type="checkbox" asp-for="@Model.Status" style="width: 20px" class="checkbox form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" value="Update" class="btn btn-theme" />
                    <a asp-action="Index" class="btn btn-info"><i class="fas fa-list"></i> Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



